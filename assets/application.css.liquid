/* Fonts */
@font-face {
  font-family: 'VCR OSD Mono';
  src: url('./fonts/VCR_OSD_MONO.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

/* Root Variables */
:root {
  --width: 1280px;
  --black: #000;
  --white: #fff;
  --transition-ease: 0.25s ease;
}

/* Base Styles */
body, p, a, button, select, option {
  font-family: 'VCR OSD Mono', monospace;
  text-transform: uppercase;
}

body {
  margin: 0 auto;
  overflow: hidden;
  width: var(--width);
  font-size: 0.75rem;
}

a {
  color: var(--black);
  cursor: pointer;
  text-decoration: none;
}

/* Utility Classes */
.visually-hidden {
  clip: rect(1px, 1px, 1px, 1px);
  height: 1px;
  overflow: hidden;
  position: absolute;
  width: 1px;
}

/* Navbar Styles */
.navbar {
  align-items: center;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding: 1.5rem;
  width: 100%;
}

.navbar-nav {
  display: flex;
  gap: 1.5rem;
  list-style: none;
  margin: 0;
  padding: 0;
}

.nav-item {
  width: 11.5625rem;
}

.nav-link, .cart-link {
  transition: all var(--transition-ease);
}

.nav-link:hover, .cart-link:hover,
.nav-link:active, .cart-link:active {
  text-decoration: underline;
}

/* Main Styles */
main {
  margin: 0;
  overflow: hidden;
  padding: 0;
}

/* Product Styles */
#product-main, #product-title,
#product-form-container, #product-description,
.product-grid-item, .cart-grid-item-content,
.cart-grid-item-image, .cart-inline-total,
.cart-subtotal, .cart-bottom {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

#product-gallery, .image-container {
  align-items: center;
  justify-content: center;
}

#product-gallery {
  box-sizing: border-box;
  display: flex;
  gap: 1.5rem;
  max-width: var(--width);
}

#product-bottom {
  display: flex;
  gap: 1.5rem;

  #product-title {
    width: 100%;
  }

  #product-descr {
    width: 100%;
  }

  #product-title {
    width: 100%;
  }
}

#AddToCartForm, .cart-form {
  flex-direction: column;
  height: 90%;
  justify-content: space-between;
}

.image-container {
  overflow: hidden;
  padding-top: 125%;
  position: relative;
}

.image-container img {
  transition: all 1s ease;
}

.image-container img:hover {
  transform: scale(1.1);
}

.product-image {
  height: 100%;
  left: 0;
  object-fit: cover;
  position: absolute;
  top: 0;
  width: 100%;
}

.product-grid {
  display: grid;
  gap: 1.5rem;
  grid-template-columns: repeat(3, 1fr);
  padding: 0 1.5rem 3rem;
}

@media (max-width: 767px) {
  .product-grid {
    grid-template-columns: 1fr;
  }
}

#title-price {
  align-items: center;
  display: flex;
  justify-content: space-between;
}

/* Footer Styles */
.footer {
  background-color: var(--white);
  color: var(--black);
  padding: 20px 0;
  text-align: center;
}

.footer-content {
  align-items: center;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  max-width: 1200px;
}

.footer-nav .nav-item {
  display: inline-block;
  margin-right: 20px;
}

.footer-nav .nav-link {
  color: #333;
  text-decoration: none;
}

/* Button Styles */
button {
  align-items: center;
  background-color: var(--black);
  color: var(--white);
  cursor: pointer;
  display: flex;
  gap: 1.5rem;
  justify-content: center;
  padding: 0.25rem 0.5rem;
  transition: all var(--transition-ease);

  &:hover {
    opacity: 0.8;
  }
}

/* Form Styles */
select, option, input {
  font-family: inherit;
  padding: 0.25rem 0.5rem;
}

select, input {
  align-items: center;
  display: flex;
  justify-content: center;
}

input[type="number"] {
  -webkit-appearance: none;
  -moz-appearance: textfield;
  border: none;
  outline: none;
  text-align: center;
  width: 1rem;

  &::-webkit-inner-spin-button,
  &::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
}

/* Mini Cart Styles */
#mini-cart {
  background: var(--white);
  height: 100vh;
  max-width: 24.625rem;
  position: fixed;
  right: -24.625rem;
  top: 0;
  transition: right var(--transition-ease);
  width: 100%;
  z-index: 1;

  .mini-cart-contents {
    height: 100%;
    overflow: auto;
  }
}

html.mini-cart-open {
  overflow: hidden;

  #mini-cart {
    display: block;
    right: 0;
  }

  main {
    position: relative;
    pointer-events: none;

    &::before {
      background: rgba(0, 0, 0, 0.6);
      bottom: 0;
      content: '';
      left: 0;
      pointer-events: none;
      position: fixed;
      right: 0;
      top: 0;
      z-index: 1;
    }
  }
}

/* Cart Item Styles */
.cart-grid-item, .cart-grid-item-inside-content, .cart-grid-item-content {
  align-items: flex-start;
  display: flex;
  gap: 1.5rem;
}

.cart-grid-item {
  align-self: stretch;
  border-bottom: 1px solid rgba(0, 0, 0, 0.25);
  opacity: 0.25;
  padding: 1.5rem;
}

.cart-grid-item-image {
  display: block;
  height: 10rem;
  width: 8rem;
}

.cart-bottom {
  display: flex;
  flex-direction: column;
  padding: 1.5rem;
  gap: 1.5rem;
  border-top: 1px solid rgba(0, 0, 0, 0.25);

  button {
    width: 100%;
  }

  .subtotal-text {
    width: 100%;
    display: flex;
    justify-content: space-between;
  }
}

.cart-subtotal {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 0.75rem;
  align-self: stretch;
}

.cart-inline-total {
  text-align: right;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  align-items: flex-start;
  flex: 1 0 0;
  align-self: stretch;
}

.cart-empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 75%;
  gap: 0.75rem;
  padding: 1.5rem;
  overflow: hidden;

  p {
    text-align: center;
  }
}

.cart-form {
  display: flex;
  flex-direction: column;
  height: 90%;
  justify-content: space-between;
}

.cart-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem;
  box-sizing: border-box;
}

.cart-grid {
  border-bottom: 1px solid rgba(0, 0, 0, 0.25);
  opacity: 0.25;
}
