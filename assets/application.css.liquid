@font-face {
  font-family: 'VCR OSD Mono';
  src: url('./fonts/VCR_OSD_MONO.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

:root {
  --width: 1280px;
}

body {
  width: var(--width);
  font-family: 'VCR OSD Mono', monospace;
  font-size: 0.75rem;
  text-transform: uppercase;
}

#product-main {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

#product-gallery {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1.5rem;
  margin: 0 auto;
}

#product-description {
  width: 100%;
  display: flex;
  padding: 0rem 1.5rem;
  align-items: flex-start;
  gap: 1.5rem;
}

#product-title {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}
