@font-face {
  font-family: 'VCR OSD Mono';
  src: url('./fonts/VCR_OSD_MONO.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

:root {
  --width: 1280px;
}

body {
  width: var(--width);
  font-family: 'VCR OSD Mono', monospace;
  font-size: 0.75rem;
  text-transform: uppercase;
  margin: 0 auto;
}

#product-main {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

#product-gallery {
  max-width: var(--width);
  display: flex;
  /* overflow: hidden; */
  align-items: center;
  justify-content: center;
  gap: 1.5rem;
  box-sizing: border-box;
}

#product-bottom {
  width: var(--width);
  display: flex;
  padding: 0rem 1.5rem;
  align-items: flex-start;
  gap: 1.5rem;
}

#product-title {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: top;
  gap: 0.75rem;
}

#product-form-contaner {
  width: 100%;
  display: flex;
}

#AddToCartForm {
  width: fit-content;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

select, option {
  font-family: 'VCR OSD Mono';
  text-transform: uppercase;
  padding: 0.25rem 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

button {
  font-family: 'VCR OSD Mono';
  text-transform: uppercase;
  color: #fff;
  background-color: #000;
  outline: 1px solid #000;
  padding: 0.25rem 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1.5rem;
}

#product-description {
  width: 100%;
  display: flex;
}

p {
  width: 100%;
  line-height: nornal;
  margin: 0;
  padding: 0;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* Creates a 3-column layout */
  gap: 20px; /* Adjust the gap size as needed */
}

.product-grid-item {
  padding-bottom: 16px;
  text-align: left;
}

/* Responsive adjustments */
@media (max-width: 767px) {
  .product-grid {
    grid-template-columns: 1fr;
  }
}
