/* Utility Classes */
.visually-hidden {
  clip: rect(1px, 1px, 1px, 1px);
  height: 1px;
  overflow: hidden;
  position: absolute !important;
  width: 1px;
}

/* Media Queries */
@media (max-width: 767px) {
  .product-grid {
    grid-template-columns: 1fr;
  }
