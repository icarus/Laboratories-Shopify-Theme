@font-face {
  font-family: 'VCR OSD Mono';
  src: url('./fonts/VCR_OSD_MONO.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

:root {
  --width: 1280px;
}

body {
  width: var(--width);
  font-family: 'VCR OSD Mono', monospace;
  font-size: 0.75rem;
  text-transform: uppercase;
  margin: 0 auto;
  overflow-y: hidden;
}

main {
  margin: 0;
  padding: 0;
  overflow-y: hidden;
}

a {
  text-decoration: none;
  color: #000;
  cursor: pointer;
}

ul {
  display: flex;
  gap: 1.5rem;
  list-style: none;
  padding: 0;
  margin: 0;
}

li {
  width: 11.5625rem;
}

.last-nav-item {
  display: flex;
  justify-content: end;
  cursor: pointer;
}

.navbar {
  width: 100%;
  nav--height: 60px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 1.5rem;
}

.nav-link, .cart-link {
  transition: all 0.5s ease;
}

.nav-link:hover, .cart-link:hover {
  text-decoration: underline;
}

.nav-link:active, .cart-link:active {
  text-decoration: underline;
}

#product-main {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

#product-gallery {
  max-width: var(--width);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1.5rem;
  box-sizing: border-box;
}

#product-bottom {
  width: var(--width);
  display: flex;
  padding: 0rem 1.5rem;
  align-items: flex-start;
  gap: 1.5rem;
}

#product-title {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: top;
  gap: 0.75rem;
}

#product-form-contaner {
  width: 100%;
  display: flex;
}

#AddToCartForm {
  width: fit-content;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

select, option {
  font-family: 'VCR OSD Mono';
  text-transform: uppercase;
  padding: 0.25rem 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

button {
  font-family: 'VCR OSD Mono';
  text-transform: uppercase;
  color: #fff;
  background-color: #000;
  outline: 1px solid #000;
  padding: 0.25rem 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1.5rem;
}

#product-description {
  width: 100%;
  display: flex;
}

p {
  width: 100%;
  line-height: nornal;
  margin: 0;
  padding: 0;
}

.product-grid {
  display: grid;
  padding: 0rem 1.5rem 3rem 1.5rem;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
}

.image-container {
  width: 100%;
  padding-top: 125%;
  position: relative;
  overflow: hidden;
}

img {
  transition: all 0.5s ease;
}

img:hover {
  scale: 1.1;
}

.product-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}


.product-grid-item {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  padding-bottom: 1.5rem;
}

@media (max-width: 767px) {
  .product-grid {
    grid-template-columns: 1fr;
  }
}

#title-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* Mini Cart Styles */

.cart-form {
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
}

.cart-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem;
  box-sizing: border-box;
}

.cart-grid {
  border-bottom: 1px solid rgba(0, 0, 0, 0.25);
  opacity: 0.25;
}

.cart-grid-item {
  display: flex;
  padding: 1.5rem;
  align-items: flex-start;
  justify-content: space-between;
  gap: 1.5rem;
  align-self: stretch;
}

.cart-grid-item-inside-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 1.5rem;
  align-self: stretch;
}

.quantity-selector {
  display: flex;
  align-items: center;
  text-align: center;
  border: 1.5px solid #000;
  gap: 1.5rem;

  button {
    color: #000;
    background: transparent;
    border: none;
    outline: none;
    cursor: pointer;
  }

  input {
    font-family: 'VCR OSD Mono';
    -webkit-appearance: none;
    -moz-appearance: textfield;
    width: 1rem;
    outline: none;
    border: none;
    text-align: center;

    &::-webkit-inner-spin-button,
    &::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
  }
}


.cart-grid-item-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1 0 0;
  align-self: stretch;
}

.cart-inline-total {
  text-align: right;
  display: flex;
  width: 100%;
}

.cart-grid-item-image {
  width: 8rem;
  height: 10rem;
  display: block;
}

.cart-close-text {
  display: none;
}

#mini-cart {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100lvh;
  max-width: 24.625rem;
  background: #fff;
  display: none;
  z-index: 1;

  .mini-cart-contents {
    overflow: auto;
    height: 100%;
  }
}

/* Cart Toggle Styles */
html.mini-cart-open {
  overflow: hidden;

  #mini-cart {
    display: block;
  }

  main {
    position: relative;
    pointer-events: none;

    &::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.6);
      pointer-events: none;
      z-index: 1;
    }
  }
}

.cart-bottom {
  display: flex;
  flex-direction: column;
  padding: 1.5rem;
  gap: 1.5rem;
  border-top: 1px solid rgba(0, 0, 0, 0.25);

  button {
    width: 100%;
  }

  .subtotal-text {
    width: 100%;
    display: flex;
    justify-content: space-between;
  }
}

.cart-subtotal {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 0.75rem;
  align-self: stretch;
}

.opacity-quarter {
  opacity: 0.25;
}

/* Quantity */

.quantity-button {
  @include reset-input;
  text-align: center;
  font-weight: $type-bold;
  color: $text-color-white;
  width: $line-global;

  &:disabled {
    opacity: 0.5;
  }

  &:not(:disabled):hover {
    color: $white;
  }
}

.quantity-text {
  display: inline-block;
  text-align: center;
}

#add-to-cart-button {
  margin-top: $line-global;
}

/* Utility */

.visually-hidden {
  position: absolute !important;
  height: 1px; width: 1px;
  overflow: hidden;
  clip: rect(1px 1px 1px 1px); /* IE6, IE7 */
  clip: rect(1px, 1px, 1px, 1px);
}
