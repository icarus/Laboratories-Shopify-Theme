@font-face {
  font-family: 'VCR OSD Mono';
  src: url('./fonts/VCR_OSD_MONO.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

:root {
  --width: 1280px;
}

body {
  width: var(--width);
  font-family: 'VCR OSD Mono', monospace;
  font-size: 0.75rem;
  text-transform: uppercase;
  margin: 0 auto;
}

a {
  text-decoration: none;
  color: #000;
}

ul {
  display: flex;
  gap: 1.5rem;
  list-style: none;
  padding: 0;
  margin: 0;
}

li {
  width: 11.5625rem;
}

.last-nav-item {
  display: flex;
  justify-content: end;
}

.navbar {
  width: 100%;
  nav--height: 60px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem 1.5rem 0 1.5rem;
  box-sizing: border-box;
  padding: 1.5rem;
}

#product-main {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

#product-gallery {
  max-width: var(--width);
  display: flex;
  /* overflow: hidden; */
  align-items: center;
  justify-content: center;
  gap: 1.5rem;
  box-sizing: border-box;
}

#product-bottom {
  width: var(--width);
  display: flex;
  padding: 0rem 1.5rem;
  align-items: flex-start;
  gap: 1.5rem;
}

#product-title {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: top;
  gap: 0.75rem;
}

#product-form-contaner {
  width: 100%;
  display: flex;
}

#AddToCartForm {
  width: fit-content;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

select, option {
  font-family: 'VCR OSD Mono';
  text-transform: uppercase;
  padding: 0.25rem 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

button {
  font-family: 'VCR OSD Mono';
  text-transform: uppercase;
  color: #fff;
  background-color: #000;
  outline: 1px solid #000;
  padding: 0.25rem 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1.5rem;
}

#product-description {
  width: 100%;
  display: flex;
}

p {
  width: 100%;
  line-height: nornal;
  margin: 0;
  padding: 0;
}

.product-grid {
  display: grid;
  padding: 0rem 1.5rem 3rem 1.5rem;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
}

.image-container {
  width: 100%;
  padding-top: 125%;
  position: relative;
}

.product-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}


.product-grid-item {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  padding-bottom: 1.5rem;
}

@media (max-width: 767px) {
  .product-grid {
    grid-template-columns: 1fr;
  }
}

#title-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* Mini Cart Styles */

.cart-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem;
  box-sizing: border-box;
}

.cart-close-text {
  display: none;
}

#mini-cart {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  max-width: 24.625rem;
  background: #fff;
  display: none;
  z-index: 1;

  .mini-cart-contents {
    overflow: auto;
    height: 100%;
  }
}

/* Cart Toggle Styles */
html.mini-cart-open {
  overflow: hidden;

  #mini-cart {
    display: block;
  }

  .cart-link {
    .cart-text {
      display: none;
    }

    .cart-close-text {
      display: inline-block;
    }
  }

  main {
    position: relative;
    pointer-events: none;

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.6);
      pointer-events: none;
      z-index: 1;
    }
  }
}
