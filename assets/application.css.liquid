/* Fonts */
@font-face {
  font-family: 'VCR OSD Mono';
  src: url('./fonts/VCR_OSD_MONO.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

/* Root Variables */
:root {
  --width: 1280px;
  --primary-color: #000; /* Example variable */
  /* Add more variables here */
}

/* Base Styles */
body {
  margin: 0 auto;
  overflow: hidden;
  width: var(--width);
  font-family: 'VCR OSD Mono', monospace;
  font-size: 0.75rem;
  text-transform: uppercase;
}

a {
  color: var(--primary-color);
  cursor: pointer;
  text-decoration: none;
}

/* Layouts */
main {
  margin: 0;
  overflow: hidden;
  padding: 0;
}

/* Components */
/* - Navbar Styles - */
.navbar {
  align-items: center;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding: 1.5rem;
  width: 100%;
}

.navbar-nav {
  display: flex;
  gap: 1.5rem;
  list-style: none;
  margin: 0;
  padding: 0;
}

.nav-item {
  width: 11.5625rem;
}

.nav-link, .cart-link {
  transition: all 0.5s ease;
}

.nav-link:hover, .cart-link:hover {
  text-decoration: underline;
}

/* - Footer Styles - */
.footer {
  background-color: #f8f8f8;
  color: #333;
  padding: 20px 0;
  text-align: center;
}

.footer-content {
  align-items: center;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  max-width: 1200px;
}

.footer-nav .nav-item {
  display: inline-block;
  margin-right: 20px;
}

